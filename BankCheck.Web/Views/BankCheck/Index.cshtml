@model BankCheck.Web.Models.BankCheckModel
@{
    ViewBag.Title = "Bank Check";
}
<div class="book-example panel panel-primary">
    <div class="panel-heading panel-head">Cheque de Banco</div>
    <div class="panel-body">
      <form action="BankCheck/PrintCheck" method="post">
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.CompanyName, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-9">
                        @Html.EditorFor(model => model.CompanyName, new { @class = "form-control", required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ClientName, new { @class = "col-lg-2 control-label "  })
                    <div class="col-lg-9">
                        @Html.EditorFor(model => model.ClientName, new { @class = "form-control", required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Date, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-9">
                        <input type="date" class="form-control" required name="DATE" id="DATE" />
                    </div>
                </div>

                <div class="form-group">

                    @Html.LabelFor(model => model.Amount, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-9">
                        <input type="number" id="Amount" name="Amount" required step="0.01" />
                    </div>
                </div>   

                <div class="form-group">
                    @Html.LabelFor(model => model.Currency, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-9">
                        <select class="form-control" id="Currency" name="Currency" required>
                            <option value="DOLARES">Dolar</option>
                            <option value="PESOS">Pesos</option>
                        </select>
                    </div>
                </div>            
                            
               
                <div class="form-group">
                    <div class="col-lg-9"></div>
                    <div class="col-lg-3">
                        
                        <button class="btn btn-primary" id="Button1" type="submit">
                            Imprimir
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div> 